<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body class="vsc-initialized">

    <div class="container">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class:"form-signin") do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <h2 class="form-signin-heading">Sign up</h2>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, placeholder:"Email address", class:"form-control" %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, placeholder:"New password", class:"form-control" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, placeholder:"New password", class:"form-control" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class:"btn btn-lg btn-primary btn-block" %>
        </div>
      <% end %>

      

    </div>

  </body>
</html>

